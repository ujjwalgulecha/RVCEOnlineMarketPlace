$con=mysqli_connect("localhost","root","root","MarketPlace");
// Check connection
if (mysqli_connect_errno()) {
  echo "Failed to connect to MySQL: " . mysqli_connect_error();}
  
  session_start();
$fname = mysqli_real_escape_string($con, $_POST['fname']);
$lname = mysqli_real_escape_string($con, $_POST['lname']);
$dob = mysqli_real_escape_string($con, $_POST['dob']);
$email = mysqli_real_escape_string($con, $_POST['email']);
$uid = mysqli_real_escape_string($con, $_POST['uid']);
$addr = mysqli_real_escape_string($con, $_POST['addr']);  
$pwd = mysqli_real_escape_string($con, $_POST['pwd']);  
$phno = mysqli_real_escape_string($con, $_POST['phno']);

$sql="INSERT INTO User (ufname, ulname, uid, upwd, udob, uemail, uaddr, uphno)
VALUES ('$fname', '$lname', '$uid', '$pwd', '$dob', '$email', '$addr', '$phno')";
if (!mysqli_query($con,$sql)) {
  die('Error: ' . mysqli_error($con));
}
echo "Your Details Have Been Added!";
echo "<br>";
echo "Welcome to the RVCE ONLINE MARKETPLACE FAMILY!";
$_SESSION['login']==true;
$_SESSION[uid]=$uid;
$_SESSION[pwd]=$pwd;
echo '<meta http-equiv="refresh" content="2;URL=User_Welcome.php">';

mysqli_close($con);
?>
